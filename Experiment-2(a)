#include<stdio.h>
int main(){
    int x,y,sum,sub,mul,rem;
    printf("enter the value of x");
    scanf("%d",&x);
    printf("enter the value of y");
    scanf("%d",&y);
    sum=x+y;
    sub=x-y;
    mul=x*y;
    rem=x%y;
printf("addition=%d\n",sum);
printf("subtraction=%d\n",sub);
printf("multiplication=%d\n",mul);
printf("remainder=%d\n",rem);
    return 0;
}
