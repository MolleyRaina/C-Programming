#include<stdio.h>
int main(){
    float r,s,l,b,a,p,a1,p1,a2,p2;
    printf("enter the value of radius r = ");
    scanf("%f",&r);
    printf("enter the value of side s = ");
    scanf("%f",&s);
    printf("enter the value of length l = ");
    scanf("%f",&l);
    printf("enter the value of breadth b = ");
    scanf("%f",&b);
    a=3.14*r*r;
    p=2*3.14*r;
    a1=s*s;
    p1=4*s;
    a2=l*b;
    p2=2*(l+b);
    printf("area of circle=%f\n",a);
    printf("perimeter of circle=%f\n",p);
    printf("area of square=%f\n",a1);
    printf("perimeter of square=%f\n",p1);
    printf("area of rectangle=%f\n",a2);
    printf("perimeter of rectangle =%f\n",p2);
    return 0;
}
