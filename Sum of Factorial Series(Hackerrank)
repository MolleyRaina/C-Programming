#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
long long calculateFactorial(int num) {
    long long fact = 1;
    for (int i = 1; i <= num; i++) {
        fact *= i;
    }
    return fact;
}
    
int main() {
    int n;
    long long sum=0;
     scanf("%d", &n);
    for (int i = 1; i <= n; i++) {
        sum += calculateFactorial(i);
    }
    printf("%lld\n", sum);
      
    return 0;
}
